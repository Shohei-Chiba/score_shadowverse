<p id="notice"><%= notice %></p>

<p>
  <strong>タイトル:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>内容:</strong>
  <%= @article.memo %>
</p>

<%  if @article.user_id == current_user.id %>
<%= link_to '編集', edit_article_path(@article), class:"btn btn-primary btn-sm" %> |
<% end %>
<%= link_to '戻る', articles_path, class:"btn btn-primary btn-sm" %>



<h2>コメント</h2>
<% @article.comments.each do |comment| %>
  <p>
   <%= comment.commenter %>: <%= comment.body %>
    <%  if comment.user_id == current_user.id %>
    <%= link_to '削除', [comment.article, comment],class:"btn btn-danger btn-xs",
               :confirm => 'よろしいですか？',
               :method => :delete %>
    <% end %>
  </p>
<% end %>


<h2>コメントを書く</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :名前 %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :内容 %><br />
    <%= f.text_area :body , :size => "30×20" %>
  </div>
  <div class="actions"> 
    <%= f.submit "コメント入力" %>
  </div>
<% end %>

