<p id="notice"><%= notice %></p>

<h1>戦績記録</h1>

<table border="3" align="center" cellpadding="auto" cellspacing="auto" width="80%"height="auto">
  <thead>
    <tr>
      <th>あなたのデッキ</th>
      <th>相手のデッキ</th>
      <th>先攻後攻</th>
      <th>結果</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.mydeck %></td>
        <td><%= deck.Opponentdeck %></td>
        <td><%= deck.Ahead %></td>
        <td><%= deck.result %></td>
        <td><%= link_to '編集', edit_deck_path(deck), class:"btn btn-primary btn-xs"%></td>
        <td><%= link_to '削除', deck, method: :delete, data: { confirm: 'よろしいですか？' }, class:"btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規登録', new_deck_path, class:"btn btn-primary btn-sm" %>
